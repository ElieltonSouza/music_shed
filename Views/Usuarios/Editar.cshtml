@model music_shed.Models.ViewModel.EditarUsuarioViewModel
@{
    ViewData["Title"] = "Alterar Dados";
}

<div class="container d-flex justify-content-center align-items-center mt-5 mb-5">
    <div class="card shadow-lg p-4" style="max-width: 550px; width: 100%;">
        <h2 class="text-center text-indigo fw-bold mb-4">
            <i class="bi bi-pencil-square me-2"></i> Alterar Dados Cadastrais
        </h2>

        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success text-center shadow-sm">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["MensagemSucesso"]
            </div>
        }

        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger text-center shadow-sm" })

        <form asp-action="Editar" method="post" class="needs-validation mt-3" novalidate>
            <input type="hidden" asp-for="Id" />

            <div class="mb-4">
                <label asp-for="Nome" class="form-label fw-semibold">Nome completo</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                    <input asp-for="Nome" class="form-control" required />
                </div>
                <span asp-validation-for="Nome" class="text-danger"></span>
                <div class="invalid-feedback">Nome é obrigatório.</div>
            </div>

            <button type="submit" class="btn btn-indigo w-100 py-2 fs-5">
                <i class="bi bi-save me-2"></i> Salvar Alterações
            </button>
        </form>
    </div>
</div>