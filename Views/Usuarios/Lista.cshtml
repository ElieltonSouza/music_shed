@model music_shed.Models.ViewModel.ListaUsuariosViewModel
@{
    ViewData["Title"] = "Usuários Cadastrados";
}

<div class="container mt-5 mb-5">
    <h2 class="text-indigo fw-bold mb-4">
        <i class="bi bi-people-fill me-2"></i> Usuários Cadastrados
    </h2>

    @if (TempData["MensagemSucesso"] is string ok && !string.IsNullOrWhiteSpace(ok))
    {
        <div class="alert alert-success text-center shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i> @ok
        </div>
    }

    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-outline-success" asp-controller="Usuarios" asp-action="Novo">
            <i class="bi bi-person-plus-fill me-2"></i> Cadastrar Professor
        </a>
    </div>

    <div class="table-responsive shadow-sm">
        <table class="table table-hover align-middle">
            <thead class="table-indigo text-white">
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Perfil</th>
                    <th class="text-center" style="width:140px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model.Usuarios)
                {
                    <tr>
                        <td>@u.Id</td>
                        <td>@u.NomeHash</td>
                        <td>@u.Perfil</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-outline-warning me-1"
                               asp-controller="Usuarios"
                               asp-action="Editar"
                               asp-route-id="@u.Id">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            <a class="btn btn-sm btn-outline-danger"
                               asp-controller="Usuarios"
                               asp-action="Excluir"
                               asp-route-id="@u.Id">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.TotalPaginas > 1)
    {
        <nav aria-label="Navegação de páginas" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.PaginaAtual == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Lista" asp-route-page="@(Model.PaginaAtual - 1)">Anterior</a>
                </li>
                @for (int i = 1; i <= Model.TotalPaginas; i++)
                {
                    <li class="page-item @(i == Model.PaginaAtual ? "active" : "")">
                        <a class="page-link" asp-action="Lista" asp-route-page="@i">@i</a>
                    </li>
                }
                <li class="page-item @(Model.PaginaAtual == Model.TotalPaginas ? "disabled" : "")">
                    <a class="page-link" asp-action="Lista" asp-route-page="@(Model.PaginaAtual + 1)">Próxima</a>
                </li>
            </ul>
        </nav>
    }
</div>