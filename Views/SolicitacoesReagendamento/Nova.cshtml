@model music_shed.Models.SolicitacaoReagendamento

@{
    ViewData["Title"] = "Solicitar Reagendamento";
}

<div class="container d-flex justify-content-center align-items-center mt-5 mb-5">
    <div class="card shadow-lg p-4" style="max-width: 650px; width: 100%;">
        <h2 class="text-center text-indigo fw-bold mb-3">
            <i class="bi bi-envelope-open-heart-fill me-2"></i> Solicitar Reagendamento de Aula
        </h2>

        <p class="text-muted text-center mb-4">
            Caso não possa comparecer na aula no horário marcado, você pode solicitar um reagendamento explicando o motivo abaixo.
        </p>

        <form asp-action="Nova" method="post" class="needs-validation" novalidate>
            <input type="hidden" asp-for="AgendaId" />
            <input type="hidden" asp-for="AlunoId" />

            <div class="mb-4">
                <label asp-for="Justificativa" class="form-label fw-semibold">Justificativa</label>
                <textarea asp-for="Justificativa" class="form-control" rows="4" required></textarea>
                <span asp-validation-for="Justificativa" class="text-danger"></span>
                <div class="invalid-feedback">Por favor, preencha o campo de justificativa.</div>
            </div>

            <div class="d-flex flex-column flex-md-row justify-content-center gap-3">
                <button type="submit" class="btn btn-outline-indigo px-4 py-2">
                    <i class="bi bi-send me-1"></i> Enviar Solicitação
                </button>
                <a asp-controller="AgendasDisponiveis" asp-action="MinhasAulas" class="btn btn-secondary px-4 py-2">
                    <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}